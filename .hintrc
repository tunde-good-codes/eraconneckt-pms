{
  "extends": [
    "development"
  ],
  "hints": {
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "scroll-behavior",
          "scrollbar-width",
          "scrollbar-color",
          "user-select",
          "-webkit-text-size-adjust",
          "-moz-appearance",
          "accent-color"
        ]
      }
    ],
    "axe/name-role-value": [
      "default",
      {
        "link-name": "off"
      }
    ],
    "no-inline-styles": "off",
    "compat-api/html": [
      "default",
      {
        "ignore": [
          "link[referrerpolicy]",
          "meta[name=theme-color]",
          "html[translate]"
        ]
      }
    ]
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not ios_saf <= 16.5",
    "not safari <= 16.4",
    "not safari <= 16.5",
    "not safari <= 16.5"
  ]
}